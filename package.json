{
  "name": "kfactor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "seed": "tsx scripts/seed-collections.ts",
    "seed:demo": "tsx scripts/seed-demo-data.ts",
    "seed:reset": "tsx scripts/seed-demo-data.ts -- --clear",
    "test:firestore": "tsx scripts/test-orchestrator-firestore.ts",
    "check:indexes": "tsx scripts/check-firestore-indexes.ts",
    "deploy:firestore": "npx firebase-tools deploy --only firestore:indexes --project k-factor-4634e",
    "firebase": "npx firebase-tools",
    "test": "vitest",
    "test:fast": "DOTENV_CONFIG_QUIET=true vitest --run --no-coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:ci": "CI=true vitest --run --coverage --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:ci && npm run test:e2e",
    "emulator": "firebase emulators:start"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitest/ui": "^1.6.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
